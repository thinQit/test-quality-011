datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  admin
  editor
  viewer
}

enum TestItemStatus {
  draft
  active
  archived
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  role         UserRole @default(viewer)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TestItem {
  id          String          @id @default(uuid())
  name        String
  description String?
  status      TestItemStatus  @default(draft)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}
